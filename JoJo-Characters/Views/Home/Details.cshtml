@model DetailsDto
@inject JoJo_Characters.Services.IJojoService service
@{
    ViewData["Title"] = "JoJo Characters";
}
<section class="pt-5 container">
    <div class="row">
        <div class="col text-center">
            @if (Model.Prior != null)
            {
                <a asp-action="Details" asp-route-Numero="@Model.Prior.Nome" class="btn btn-lg btn-outline-dark">
                    @Model.Prior.Nome - @Model.Prior.Nome
                </a>
            }
        </div>
        <div class="col text-center">
            <h1 class="fs-1">@Model.Current.Nome <span class="fs-2 text-secondary">
                    @Model.Current.Nome</span></h1>
        </div>
        <div class="col text-center">
            @if (Model.Next != null)
            {
                <a asp-action="Details" asp-route-Numero="@Model.Next.Nome" class="btn btn-lg btn-outline-dark">
                    @Model.Next.Nome - @Model.Next.Nome
                </a>
            }
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-lg-5 p-0">
            <img class="img-fluid cursor-pointer" src="@Model.Current.Imagem" alt="@Model.Current.Nome">
        </div>
        <div class="col-lg-7 fs-5 mt-4">
            <p class="mb-3"><strong>Sexo:</strong> @Model.Current.Sexo</p>
            <p class="mb-3"><strong>PaisDeNascimento:</strong> @Model.Current.PaisDeNascimento</p>
            <p class="mb-3"><strong>Altura:</strong> @Model.Current.Altura cm</p>
            <p class="mb-3"><strong>Peso:</strong> @Model.Current.Peso kgs</p>
            <p class="mb-3"><strong>Raça:</strong> @Model.Current.Raça</p>
            <p class="mb-3"><strong>Stand:</strong> @Model.Current.Stand</p>
            <p class="fw-bold">Parte</p>
            <div class="btn-group">
                @foreach (var parte in Model.Current.Parte)
                {
                    <a asp-action="Index" asp-route-tipo="@parte.ToLower()" class="btn btn-lg text-white" style="background-color:@service.GetParte(parte).Cor">@parte</a>
                }
            </div>
        </div>
    </div>
</section>