@model PersonagemDto
@inject JoJo_Characters.Services.IJojoService service
@{
    ViewData["Title"] = "Home";
}
<section class="pt-5 pb-3 text-center container">
    <div class="row">
        <div class="col mx-auto">
            <h1>JoJo-Characters</h1>
            <div class="group">
                <button id="btn-all" class="btn btn-lg my-2 text-white bg-secondary btn-filter" onclick="filter('all')">
                    Ver Todos
                </button>
                @foreach (var parte in Model.Partes)
                {
                    <button id="btn-@parte.Nome.ToLower()" class="btn btn-sm my-2 text-white btn-filter" onclick="filter('@parte.Nome.ToLower()')" style="background-color:@parte.Cor">
                        @parte.Nome
                    </button>
                }
            </div>
        </div>
    </div>
</section>
<div class="album py-5 bg-light">
    <div class="container">
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-3">
            <!-- Card Pokemon - Inicio -->
            @foreach (var personagem in Model.Personagens)
            {
                <div class="col">
                    <div class="card shadow-sm cursor-pointer @string.Join(' ', personagem.Parte).ToLower()" onclick="GetInfo(@personagem.Nome)">
                        <img src="@personagem.Imagem" class="card-img-top" width="100%" height="300" alt="@personagem.Nome" />
                        <div class="card-body">
                            <p class="card-text mb-0">@personagem.Nome</p>
                            <h3 class="card-title">@personagem.Nome</h3>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    @foreach (var parte in personagem.Parte)
                                    {
                                        <a asp-action="Index" asp-route-tipo="@parte.ToLower()" class="btn my-2 text-white" style="background-color:@service.GetParte(parte).Cor">@parte</a>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
            <!-- Card Pokemon - Fim -->
            <div id="zeroPokemon" class="col-lg-12 text-center">
                <h1 class="my-3 text-danger">Nenhum Personagem Encontrado</h1>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script src="~/js/site.js"></script>
    <script>
        let toFilter = '@Html.Raw(ViewData["Filter"])';
        filter(toFilter);
        function GetInfo(name) {
            window.location = '@Url.Action("Details", "Home")' + '?Nome=' + name;
        }
    </script>
}
